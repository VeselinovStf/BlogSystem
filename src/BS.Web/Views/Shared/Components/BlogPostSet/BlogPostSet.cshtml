@model BlogPostViewComponentModel


<!-- Page Content -->
<div class="row">

    <div class=" col-lg-8 col-md-10 mx-auto">
        @foreach (var item in Model.Posts)
        {
            <!-- Post Content Column -->
        <div class="col-lg-8">

            <!-- Title -->
            <h1 class="mt-4">@item.Title</h1>

            <!-- Author -->
            <p class="lead">
                by
                @item.CreatedBy / Last Edited by: @item.LastEditedBy
            </p>

            <hr>

            <!-- Date/Time -->
            <p>Published: @item.CreatedOn</p>

            <hr>


            <!-- Post Content -->
            <p class="lead">@item.Content</p>
            <hr>
            <p class="d-inline-block">
                Keywords:
                @foreach (var tag in item.BlogPostTags)
                {
                <p class="card d-inline-block">@tag.Name</p>
            }

                


                @if (!Model.IsPublic)
                {
                    <a class="btn btn-light " asp-action="Index" asp-controller="Tags" asp-route-id="@item.Id">Edit Keywords</a>
                    <hr />
                    <a class="btn btn-dark" asp-action="Edit" asp-controller="BlogPost" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-dark" asp-action="Details" asp-controller="BlogPost" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-dark" asp-action="Delete" asp-controller="BlogPost" asp-route-id="@item.Id">Delete</a>
                }
            </div>
        }
        </div>
</div>